pragma solidity ^0.8.19;

import {Test, console} from "forge-std/Test.sol";
import {MoodNft} from "../../src/MoodNft.sol";
import {DeployMoodNft} from "../../script/DeployMoodNft.s.sol";

contract MoodNftIntegrationsTest is Test {

    MoodNft public moodNft;
    address user = makeAddr("user");

    DeployMoodNft public deployer;
    
    function setUp() public {
        deployer = new DeployMoodNft();
        moodNft = deployer.run();
    }

    function testViewTokenURIIntegration() external {
        vm.prank(user);
        moodNft.mintNft();
    }

    function testFLipTokenToSad() external{
        vm.prank(user);
        moodNft.mintNft();

        vm.prank(user);
        moodNft.flipMood(0);
        string memory TOKEN_URI_EXPECTED = "data:application/json;base64,";

        assert(keccak256(abi.encodePacked(moodNft.tokenURI(0))) == keccak256(abi.encodePacked(TOKEN_URI_EXPECTED)));
    }

}